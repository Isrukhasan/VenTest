@model Venturus.ViewModel.CreateRoleViewModel
@{
    ViewData["Title"] = "Role Administration";
}


<section>
    <div class="container CenterMe" >
        <h3>@ViewData["Title"]</h3>
        <div class="row">
            <div class="col-md-12">
                <form asp-route-returnUrl="Administration/ListRoles" method="post">
                    <h5>Venturus Employee Role</h5>
                    <hr />
                    <div asp-validation-summary="All" class="text-danger"></div>
                    <div class="form-group">
                        <label asp-for="RoleName"> Write Role (Ex: Admin/Employee)</label>
                        <input asp-for="RoleName" class="form-control" />
                        <span asp-validation-for="RoleName" class="text-danger"></span>
                    </div>
                    <button type="submit" class="btn btn-primary">Create Role</button>
                    <a class="btn btn-danger" href="javascript:history.go(-1)">Return Back</a>
        
                </form>
            </div>
        </div>

    </div>
</section>

