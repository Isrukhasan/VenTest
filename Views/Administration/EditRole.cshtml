@model Venturus.ViewModel.EditRoleViewModel
@{
    ViewData["Title"] = "EditRole";
}

<h1>EditRole</h1>

<form method="post">
    <div class="form-group row">
        <label asp-for="Id" class="col-sm-3 col-form-label">
            <div class="col-sm-10">
                <input asp-for="Id" disabled class="form-control"/>
            </div>
        </label>
    </div>
    <div class="form-group row">
        <label asp-for="RoleName" class="col-sm-3 col-form-label">
            <div class="col-sm-10">
                <input asp-for="RoleName"  class="text-danger"/>
            </div>
        </label>
    </div>
    <div asp-validation-summary="All" class="text-danger"></div>
    
    <div class="form-group row">
        <div class="col-sm-10">
            <button type="submit" class="btn btn-primary"> Update</button>
            <a asp-action="ListRoles" class="btn btn-danger">Cancel</a>
        </div>
    </div>
</form>
<div>
    <a asp-action="EditUserInRole" class="btn btn-primary" asp-route-roleId="@Model.Id">User Assign </a>
</div>
